{{> header}}
<div class="container">
    <div class="row">
<h2 style="text-align:center;">Edit {{found.name}}</h2>
        <div style="width:30%;margin:0 auto;">
<form action="/campgrounds/{{found._id}}/?_method=PUT" method="POST">
    <div class="form-group">
<input class="form-control" type="text" value="{{found.name}}" name="name">
        </div>
      <div class="form-group">
<input class="form-control" type="number" value="{{found.price}}" name="price" min="0.01" step="0.01">
        </div>
    <div class="form-group">
    <input class="form-control" type="text" value="{{found.image}}" name="url">
    </div>
         <div class="form-group">
    <input class="form-control" type="text" value="{{found.description}}" name="description">
    </div>  
    
    <div class="form-group">
    <button class="btn btn-lg btn-default btn-block btn btn-primary">Submit!</button>
    </div>

</form>
            <a href="/campgrounds">Campgrounds</a>
            </div>

    </div>
    </div>
{{> footer}}
